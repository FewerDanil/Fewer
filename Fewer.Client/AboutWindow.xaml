<Window x:Class="Fewer.Client.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="About project" Height="230" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*" />
            <RowDefinition Height="0.7*" />
            <RowDefinition Height="1.2*" />
        </Grid.RowDefinitions>
        
        <TextBlock Grid.Row="0" Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center" Text="Project 'Fewer' was developed by students S-15-PZ3 group." FontSize="14"/>
        <TextBlock Grid.Row="1" Margin="0 0 15 0" HorizontalAlignment="Right" VerticalAlignment="Bottom" Text="MSP exam, 2016" FontSize="14"/>            
        <Button Grid.Row="2" x:Name="button_ok" Content="Ok" Click="button_Ok_Click" Margin="25 10 25 10" FontSize="14"/>
        
    </Grid>
</Window>
