<Window x:Class="Fewer.Client.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Fewer.Client"
        mc:Ignorable="d"
        Title="About" Height="225" Width="350" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>

        <Label Grid.Column="0" Grid.Row="0" Content="Project made by s15pz3 group" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="20"/>
        <Label Grid.Column="0" Grid.Row="1" Content="Copyright 2016" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
        <Button x:Name="okButton" Grid.Row="2" Margin="6, 15" Content="OK" Click="button_Ok_Click"/>
    </Grid>
</Window>
