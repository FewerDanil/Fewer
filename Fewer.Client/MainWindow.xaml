<Window x:Class="Fewer.Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow"
        Width="655"
        Height="550">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="18"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <Menu Grid.Row="0">
            <MenuItem Header="File">
                <MenuItem x:Name="disksMenuItem" Header="Scan disks"/>
                <Separator/>
                <MenuItem Header="Exit"/>
            </MenuItem>
        </Menu>
        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="55"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="60"/>
                </Grid.ColumnDefinitions>

                <ProgressBar x:Name="scanProgressBar" Grid.Column="0" Margin="10, 10, 0, 10" Value="78" />
                <Label x:Name="scanProgressLabel" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Margin="10" Content="78%"/>
            </Grid>
            <Grid Grid.Row="1">
                <ListView Name="filesListView" Margin="10, 0">
                    <ListView.View>
                        <GridView>
                            <GridView.Columns>
                                <GridViewColumn Header="Имя Файла" DisplayMemberBinding="{Binding Name}"/>
                                <GridViewColumn Header="Размер файла" DisplayMemberBinding="{Binding SizeString}"/>
                                <GridViewColumn Header="Дата последнего изменения"  DisplayMemberBinding="{Binding LastChange}"/>
                                <GridViewColumn Header="Оценка" DisplayMemberBinding="{Binding Score}"/>
                            </GridView.Columns>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="145"/>
                    <ColumnDefinition Width="1*"/>
                    <ColumnDefinition Width="145"/>
                </Grid.ColumnDefinitions>

                <Button x:Name="analyzeButton" Grid.Column="0" Margin="10" Content="Analyze" BorderBrush="{x:Null}" Background="#FF2668C2" Foreground="White" FontSize="12"/>
                <Button x:Name="clearButton" Grid.Column="2" Margin="10" Content="Clear" BorderBrush="{x:Null}" Background="#FF2668C2" Foreground="White" FontSize="12"/>
            </Grid>
        </Grid>
    </Grid>
</Window>